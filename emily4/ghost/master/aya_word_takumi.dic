takumi
{
	_n = RAND(89)
	if _n >= 66 {
		_th1 = takumi_s
		_th2 = takumi_s
		if _th1 == _th2 {
			_th1 + "の" + takumi_f
		} else {
		_th1 + "と" + _th2 + "の" + takumi_f
		}
