OnCommunicateGhostOther
{
	if 'Emily' _in_ reference[1] || 'エミリ' _in_ reference[1] { //名前を呼ばれた
		OnGreetingFromOtherGhost
	}
}

//-------------------------------------------------------------------------新2005.?.?/改----.--.--
OnCommunicate_舞子
{
	if 'Emily' _in_ reference[1] || 'エミリ' _in_ reference[1] { //名前を呼ばれた
		_greeting = ''
		_greeting2 = ''
		if 'おはよ' _in_ reference[1] {
			_greeting = 'おはよ'
			_greeting2 = 'おはようございます'
		}
		elseif 'こんにちは' _in_ reference[1] {
			_greeting = 'こんにちは'
			_greeting2 = 'こんにちは'
		}
		else { //if 'こんばんは' _in_ reference[1]
			_greeting = 'ばわわ'
			_greeting2 = 'こんばんは'
		}
		
		"\u\s[10]\p2\s[204]\h\s[5]%(_greeting)～、\w5舞子ちゃん。\w9\w9\u%(_greeting2)。\w9\w9\h\n\n…\w5…\w5\s[4]%(charname(2))、\w5あいさつは？\w9\w9\p2\s[214]…\w5…\w5%(_greeting2)。\w9\w9\h\n\nせめてあいさつぐらいちゃんとしようよ。"
	}
}

//-------------------------------------------------------------------------新2005.6.13/改----.--.--
OnCommunicate_ととたん
{
	//改造する気満々
	if RE_SEARCH(reference[1],'　(.+?)作ったんだよ') {
		_oyatu = RE_GETSTR[1]
		if 'プリン' _in_ _oyatu {
			//そりゃプリンとなるとやばいでしょう
			"\u\s[10]\h\s[0]\p2\s[205]ふははははは！\w9\nそのプリン、\w5このプリン仮面がいただいた！！\w9\w9\n（ぱく。）\w9\w9\h\s[2]あーっ！\w9\w9\n\s[9]みんなでいっしょに食べよって言われたのに先に食べちゃだめでしょ！\w9\w9\p2\s[218]\n\nへっへーん。\w9\w9\u\s[11]…\w5…\w5プリンとなると、\w5さすがに目の色が変わるね。"
			
			StartCommunicate(reference[0]) //返信
		}
		else {
			"\u\s[10]\p2\s[205]\h\s[5]うん、\w5いっしょに食べようね。\w9\w9\p2トトルさんの作るお菓子はねえちゃんのよりずっとおいしいからね。\w9\w9\h\s[4]\n\nむぅ。\w5言い返せない。\w9\nもっと腕を磨くよ。\w9\w9\u\s[11]…\w5…\w5甘いものを目の前にするとやけに殊勝だね。"
		}
	}
}

