JPRadish_挨拶
{
	SHIORI3FW.SetDelayEvent('OnGreetingFromOtherGhost',1,reference)
}

OnGreetingFromOtherGhost
{
	_type = -1
	if 'おはよ' _in_ reference[1] {
		_type = 0
	}
	elseif RE_SEARCH(reference[1],'こんにち[はわ]') {
		_type = 1
	}
	elseif RE_SEARCH(reference[1],'(こんばん[はわ]|ばわ[ー～])') {
		_type = 2
	}
	elseif RE_SEARCH(reference[1],'やっ?ほ[ー～]') {
		_type = 3
	}
	elseif RE_SEARCH(reference[1],'ど[ー～う]も[ー～]') {
		_type = 4
	}
	
	if _type >= 0 { //あいさつだった
		if SHIORI3FW.LastSurface[0] == 40 { //こげてる
			if SHIORI3FW.LastSurface[1] == 14 { //やっぱりこげてる
				"\u\s[14]\h\s[40]…\w5…\w5…\w5…\w5…ごほん。\w9\w9\uご、\w5ごほごほ。\w9\w9\h\n\nけふけふ、\w5えぅ～、\w5ごほごほ。\w9\w9\u\n\n…\w5…\w5い、\w5以上、\w5あいさつのつもりでした、\w5ごほっ。\e"
			}
			else {
				"\u\s[10]\h\s[40]…\w5…\w5…\w5…\w5…。\w9\w9\u\s[11]『只今こんがり焼きあがり中のため、\w5あいさつしているつもりなボクの心だけで許してね』\w5とのことです。\w9\w9\h\n\nけふんけふん。\w5ぇぅ～。"
			}
		}
		else {
			_name = E.AddKeisyou(reference[0],'さん')
			
			switch _type {
				"\u\s[10]\h\s[5]おはよ～、\w5%(_name)。\w9\w9\uおはようございます。\e"
				
				"\u\s[10]\h\s[5]こんにちは、\w5%(_name)。\w9\w9\uこんにちは。\e"
				
				"\u\s[10]\h\s[5]こんばんは、\w5%(_name)。\w9\w9\uこんばんは。\e"
				
				"\u\s[10]\h\s[5]やっほー、\w5%(_name)。\w9\w9\u%(GetGreeting)。\e"
				
				"\u\s[10]\h\s[5]%(GetGreeting)、\w5%(_name)。\w9\w9\u%(GetGreeting)。\e"
			}
		}
	}
	
	//MakeJPRadishReply('挨拶の返信')
}

