//---- エミリオ側おすすめサイトのリスト -----------------------------------------------------
On_char2.recommendsites
{
	_arr = MainMenuArray
	_n = ARRAYSIZE(_arr)
	_tx = ""
	
	_c1 = CHR(1)
	_c2 = CHR(2)
	
	for _i = 0 ; _i < _n ; _i++ {
		if _arr[_i] != '-' {
			_s = SPLIT(_arr[_i],',')
			_tx += "%(_s[0])%(_c1)script:\![raise,OnChoiceSelect,%(_s[1])]%(_c1)%(_c2)"
		}
	}
	_tx
}

