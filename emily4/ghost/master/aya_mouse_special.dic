{
	if 'くれてやる' _in_ reference[3] {
		"\u\s[10]\h\s[7]指のかわりに芋でないとだめっ！\w9\n\s[9]でないとかみついてやるっ。\w9\w9\u\s[11]…\w5…\w5また乱暴だね。"
	}
}

HandActivate_NormalStart_Ear1
